@{
    ViewData["Title"] = "Login";
}

<style>
    .container {
        width: 350px;
        margin: auto;
        margin-top: 100px;
    }

    input {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
    }

    button {
        width: 100%;
        padding: 10px;
        background: #007bff;
        color: white;
        border: none;
    }

    a {
        text-decoration: none;
    }
</style>

<div class="container">
    <h2>Login</h2>

    <form method="post" asp-controller="Auth" asp-action="Login">
        <input name="username" placeholder="Username" required />
        <input name="password" type="password" placeholder="Password" required />
        <button type="submit">Login</button>
    </form>

    <br />
    <a asp-controller="Auth" asp-action="Register">
        Create Account
    </a>
</div>
